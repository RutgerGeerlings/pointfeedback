{
  "name": "pointfeedback",
  "version": "1.0.0",
  "description": "Drop feedback pins anywhere on your Next.js app. A visual, collaborative feedback widget for design reviews, QA, and client feedback.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./api": {
      "types": "./dist/api/index.d.ts",
      "import": "./dist/api/index.mjs",
      "require": "./dist/api/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RutgerGeerlings/pointfeedback.git"
  },
  "keywords": [
    "nextjs",
    "feedback",
    "widget",
    "react",
    "visual-feedback",
    "annotations",
    "collaboration",
    "design-review",
    "qa",
    "comments",
    "pins"
  ],
  "author": "Rutger Geerlings",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RutgerGeerlings/pointfeedback/issues"
  },
  "homepage": "https://github.com/RutgerGeerlings/pointfeedback#readme",
  "peerDependencies": {
    "next": ">=13.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
